@model CompartimentoArmarioViewModel

@{
	ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Compartimento</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<input type="hidden" asp-for="Compartimento.Id" />
			<div class="form-group">
				<label asp-for="Compartimento.Tamanho" class="control-label"></label>
				<input asp-for="Compartimento.Tamanho" class="form-control" />
				<span asp-validation-for="Compartimento.Tamanho" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Armario</label>
				<select asp-for="Compartimento.ArmarioId" asp-items="@(new SelectList(Model.Armarios, "Id", "Nome"))" class="form-control">
					<option></option>
				</select>
				<span asp-validation-for="Compartimento.ArmarioId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Salvar" class="btn btn-primary" />
				<a asp-action="CompartimentosAdm" class="btn btn-secondary">Voltar à Lista</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
