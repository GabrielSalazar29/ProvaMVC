@model Compartimento

@{
    ViewData["Title"] = "Deletar";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja deletar?</h3>
<div>
	<h4>Compartimento</h4>
    <hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Id)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Status)
		</dt>
		@if (((int)(Model.Status)) == 1) {

			<dd class="text-success col-sm-10">
				@Html.DisplayFor(model => model.Status)
			</dd>
		} else {

			<dd class="text-danger col-sm-10">
				@Html.DisplayFor(model => model.Status)
			</dd>
		}
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ArmarioId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ArmarioId)
		</dd>
	</dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
		<a asp-action="CompartimentosAdm" class="btn btn-secondary">Voltar à Lista</a>
    </form>
</div>
