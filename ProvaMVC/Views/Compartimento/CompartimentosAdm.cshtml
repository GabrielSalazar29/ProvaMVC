@model IEnumerable<Compartimento>

@{
	ViewData["Title"] = "Compartimentos Cadastrados";
}

<h2 class="text-primary ">@ViewData["Title"]</h2>

<p>
	<a asp-action="Create" class="btn btn-secondary">Adicionar +</a>
</p>
<table class="table table-striped table-hover mt-3">
	<thead>
		<tr class="bg-primary text-white">
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tamanho)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ArmarioId)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Id)
			</td>
			@if (((int)(item.Status)) == 1) {

				<td class="text-success">
					@Html.DisplayFor(modelItem => item.Status)
				</td>
			} else {

				<td class="text-danger">
					@Html.DisplayFor(modelItem => item.Status)
				</td>
			}
			<td>
				@Html.DisplayFor(modelItem => item.Tamanho)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ArmarioId)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
				<a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
				<a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
			</td>
		</tr>
		}
	</tbody>
</table>
<a asp-action="PageAdm" asp-controller="Home" class="btn btn-secondary">Voltar</a>