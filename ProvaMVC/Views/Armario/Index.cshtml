@model ArmarioFormViewModel
@{
	ViewData["Title"] = "Armarios";
}

<h2 class="text-primary">@ViewData["Title"]</h2>

<table class="table table-striped table-hover mt-3">
	<thead>
		<tr class="bg-primary text-white">
			<th>Nome</th>
			<th>Ponto X</th>
			<th>Ponto Y</th>
			<th>Comp Disponiveis</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Armarios) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PontoX)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PontoY)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Livres)
				</td>
				<td>
					@if (Model.Usuario.ArmarioId == null) {
						<a type="submit" href="/Compartimento/Index?armarioId=@item.Id&usuarioId=@Model.Usuario.Id">Detalhes</a>
					} else if (Model.Usuario.ArmarioId == item.Id) {
						<a type="submit" href="/Compartimento/Index?armarioId=@item.Id&usuarioId=@Model.Usuario.Id">Detalhes</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
